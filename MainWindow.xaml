<Window x:Class="MarvinsAIRA.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MarvinsAIRA"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        mc:Ignorable="d"
        Title="Marvin's Awesome iRacing App v0.8"
        Height="Auto"
        Width="800"
        Closing="Window_Closing"
        Activated="Window_Activated"
        SizeToContent="Height"
        ResizeMode="CanMinimize"
        Icon="/icon.ico"
        WindowStartupLocation="CenterScreen"
        ui:WindowHelper.UseModernWindowStyle="True">
    <Window.DataContext>
        <local:Settings />
    </Window.DataContext>
    <StackPanel>
        <TabControl>
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <CheckBox x:Name="ForceFeedback_CheckBox" VerticalAlignment="Center" Click="ForceFeedback_CheckBox_Click" IsChecked="{Binding ForceFeedbackEnabled, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Content="" MinWidth="0" MinHeight="0" Padding="0,0,0,0" />
                        <Label Content="Force Feedback" VerticalAlignment="Center" Margin="10,0,0,0" />
                    </StackPanel>
                </TabItem.Header>
                <StackPanel Margin="10,10,10,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0" Content="Device" VerticalAlignment="Center" />
                        <ComboBox x:Name="ForceFeedbackDeviceComboBox" Grid.Column="1" Margin="10,0,0,0" HorizontalAlignment="Stretch" VerticalAlignment="Top" ItemsSource="{Binding DeviceList, Mode=OneWay}" DisplayMemberPath="Value" SelectedValuePath="Key" SelectedValue="{Binding SelectedDeviceId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" SelectionChanged="ForceFeedbackDeviceComboBox_SelectionChanged" />
                        <Button x:Name="ForceFeedbackTestButton" Grid.Column="2" Margin="10,0,0,0" Content="Test" Width="64" Click="ForceFeedbackTestButton_Click" />
                    </Grid>
                    <Grid Margin="0,5,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="90"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="78"/>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0" Content="Wheel Max" VerticalAlignment="Center" ToolTip="This is the maximum force your wheel can produce in Newton-meters." />
                        <TextBox Grid.Column="1" Text="{Binding WheelMaxForceString, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" IsReadOnly="True" FontWeight="Medium" TextAlignment="Center" Margin="10,0,0,0" IsUndoEnabled="False" MaxLines="1" Padding="0,0,0,0" />
                        <Slider Grid.Column="2" VerticalAlignment="Center" Margin="10,0,0,0" Minimum="0" Maximum="50" SmallChange="0.1" LargeChange="1" TickPlacement="TopLeft" Value="{Binding WheelMaxForce, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" TickFrequency="1" />
                        <Label Grid.Column="3"/>
                    </Grid>
                    <Grid Margin="0,5,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="90"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0" Content="Overall Scale" VerticalAlignment="Center" ToolTip="This is the overall scale to convert from Newton-meters into DirectInput force feedback units." />
                        <TextBox Grid.Column="1" Text="{Binding OverallScaleString, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" IsReadOnly="True" FontWeight="Medium" TextAlignment="Center" Margin="10,0,0,0" IsUndoEnabled="False" MaxLines="1" Padding="0,0,0,0" />
                        <Slider Grid.Column="2" VerticalAlignment="Center" Margin="10,0,0,0" Minimum="0" Maximum="2000" SmallChange="1" LargeChange="50" TickPlacement="TopLeft" Value="{Binding OverallScale, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" TickFrequency="50" />
                        <Button Grid.Column="3" x:Name="DecreaseOverallScaleButton" Margin="10,0,0,0" Click="DecreaseOverallScaleButton_Click" Background="{x:Null}" BorderBrush="{x:Null}" MinWidth="32" MinHeight="32" Padding="0,0,0,0">
                            <Image Source="/minus-button.png"/>
                        </Button>
                        <Button Grid.Column="4" x:Name="IncreaseOverallScaleButton" Click="IncreaseOverallScaleButton_Click" Background="{x:Null}" BorderBrush="{x:Null}" MinWidth="32" MinHeight="32" Padding="0,0,0,0">
                            <Image Source="/plus-button.png"/>
                        </Button>
                    </Grid>
                    <Grid Margin="0,5,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="90"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0" Content="Detail Scale" VerticalAlignment="Center" ToolTip="This is how much detail you want to feel (tire chatter, bumps, etc) and 100% means as-is from iRacing." />
                        <TextBox Grid.Column="1" Text="{Binding DetailScaleString, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" IsReadOnly="True" FontWeight="Medium" TextAlignment="Center" Margin="10,0,0,0" IsUndoEnabled="False" MaxLines="1" Padding="0,0,0,0" />
                        <Slider Grid.Column="2" VerticalAlignment="Center" Margin="10,0,0,0" Minimum="0" Maximum="200" SmallChange="1" LargeChange="5" TickPlacement="TopLeft" Value="{Binding DetailScale, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" TickFrequency="10" />
                        <Button Grid.Column="3" x:Name="DecreaseDetailScaleButton" Margin="10,0,0,0" Click="DecreaseDetailScaleButton_Click" Background="{x:Null}" BorderBrush="{x:Null}" MinWidth="32" MinHeight="32" Padding="0,0,0,0">
                            <Image Source="/minus-button.png"/>
                        </Button>
                        <Button Grid.Column="4" x:Name="IncreaseDetailScaleButton" Click="IncreaseDetailScaleButton_Click" Background="{x:Null}" BorderBrush="{x:Null}" MinWidth="32" MinHeight="32" Padding="0,0,0,0">
                            <Image Source="/plus-button.png"/>
                        </Button>
                    </Grid>
                    <StackPanel Margin="0,10,0,0">
                        <Border BorderThickness="1,1,1,1" BorderBrush="Gray">
                            <Image x:Name="WheelForceFeedbackImage" Height="200" Width="768" />
                        </Border>
                        <Button x:Name="TogglePrettyGraph_Button" Content="Enable Pretty Graph" Margin="0,3,0,0" Click="TogglePrettyGraph_Button_Click" HorizontalAlignment="Stretch" />
                    </StackPanel>
                </StackPanel>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <CheckBox x:Name="WindSimulator_CheckBox" VerticalAlignment="Center" IsChecked="{Binding WindSimulatorEnabled, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Content="" MinWidth="0" MinHeight="0" Padding="0,0,0,0" Click="WindSimulator_CheckBox_Click" />
                        <Label Content="Wind Simulator" VerticalAlignment="Center" Margin="10,0,0,0" />
                    </StackPanel>
                </TabItem.Header>
                <StackPanel Margin="10,10,10,10">
                    <GroupBox Header="Car Speed">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBox Text="{Binding CarSpeed1, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="10,0,10,0" TextAlignment="Center" Padding="0,0,0,0" VerticalContentAlignment="Center" />
                            </StackPanel>
                            <StackPanel Grid.Column="1">
                                <TextBox Text="{Binding CarSpeed2, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="10,0,10,0" TextAlignment="Center" Padding="0,0,0,0" VerticalContentAlignment="Center" />
                            </StackPanel>
                            <StackPanel Grid.Column="2">
                                <TextBox Text="{Binding CarSpeed3, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="10,0,10,0" TextAlignment="Center" Padding="0,0,0,0" VerticalContentAlignment="Center" />
                            </StackPanel>
                            <StackPanel Grid.Column="3">
                                <TextBox Text="{Binding CarSpeed4, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="10,0,10,0" TextAlignment="Center" Padding="0,0,0,0" VerticalContentAlignment="Center" />
                            </StackPanel>
                            <StackPanel Grid.Column="4">
                                <TextBox Text="{Binding CarSpeed5, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="10,0,10,0" TextAlignment="Center" Padding="0,0,0,0" VerticalContentAlignment="Center" />
                            </StackPanel>
                            <StackPanel Grid.Column="5">
                                <TextBox Text="{Binding CarSpeed6, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="10,0,10,0" TextAlignment="Center" Padding="0,0,0,0" VerticalContentAlignment="Center" />
                            </StackPanel>
                            <StackPanel Grid.Column="6">
                                <TextBox Text="{Binding CarSpeed7, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="10,0,10,0" TextAlignment="Center" Padding="0,0,0,0" VerticalContentAlignment="Center" />
                            </StackPanel>
                            <StackPanel Grid.Column="7">
                                <TextBox Text="{Binding CarSpeed8, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="10,0,10,0" TextAlignment="Center" Padding="0,0,0,0" VerticalContentAlignment="Center" />
                            </StackPanel>
                        </Grid>
                    </GroupBox>
                    <GroupBox Header="Wind Force">
                        <Grid Margin="0,5,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <Slider Value="{Binding WindForce1, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Orientation="Vertical" Height="200" HorizontalAlignment="Center" TickPlacement="TopLeft" SmallChange="0.5" Maximum="100" TickFrequency="2" LargeChange="5"/>
                                <TextBox Text="{Binding WindForceString1, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="10,10,10,0" TextAlignment="Center" IsReadOnly="True" FontWeight="Medium" IsUndoEnabled="False" MaxLines="1" Padding="0,0,0,0" VerticalContentAlignment="Center" />
                            </StackPanel>
                            <StackPanel Grid.Column="1">
                                <Slider Value="{Binding WindForce2, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Orientation="Vertical" Height="200" HorizontalAlignment="Center" TickPlacement="TopLeft" SmallChange="0.5" Maximum="100" TickFrequency="2" LargeChange="5"/>
                                <TextBox Text="{Binding WindForceString2, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="10,10,10,0" TextAlignment="Center" IsReadOnly="True" FontWeight="Medium" IsUndoEnabled="False" MaxLines="1" Padding="0,0,0,0" VerticalContentAlignment="Center" />
                            </StackPanel>
                            <StackPanel Grid.Column="2">
                                <Slider Value="{Binding WindForce3, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Orientation="Vertical" Height="200" HorizontalAlignment="Center" TickPlacement="TopLeft" SmallChange="0.5" Maximum="100" TickFrequency="2" LargeChange="5"/>
                                <TextBox Text="{Binding WindForceString3, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="10,10,10,0" TextAlignment="Center" IsReadOnly="True" FontWeight="Medium" IsUndoEnabled="False" MaxLines="1" Padding="0,0,0,0" VerticalContentAlignment="Center" />
                            </StackPanel>
                            <StackPanel Grid.Column="3">
                                <Slider Value="{Binding WindForce4, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Orientation="Vertical" Height="200" HorizontalAlignment="Center" TickPlacement="TopLeft" SmallChange="0.5" Maximum="100" TickFrequency="2" LargeChange="5"/>
                                <TextBox Text="{Binding WindForceString4, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="10,10,10,0" TextAlignment="Center" IsReadOnly="True" FontWeight="Medium" IsUndoEnabled="False" MaxLines="1" Padding="0,0,0,0" VerticalContentAlignment="Center" />
                            </StackPanel>
                            <StackPanel Grid.Column="4">
                                <Slider Value="{Binding WindForce5, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Orientation="Vertical" Height="200" HorizontalAlignment="Center" TickPlacement="TopLeft" SmallChange="0.5" Maximum="100" TickFrequency="2" LargeChange="5"/>
                                <TextBox Text="{Binding WindForceString5, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="10,10,10,0" TextAlignment="Center" IsReadOnly="True" FontWeight="Medium" IsUndoEnabled="False" MaxLines="1" Padding="0,0,0,0" VerticalContentAlignment="Center" />
                            </StackPanel>
                            <StackPanel Grid.Column="5">
                                <Slider Value="{Binding WindForce6, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Orientation="Vertical" Height="200" HorizontalAlignment="Center" TickPlacement="TopLeft" SmallChange="0.5" Maximum="100" TickFrequency="2" LargeChange="5"/>
                                <TextBox Text="{Binding WindForceString6, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="10,10,10,0" TextAlignment="Center" IsReadOnly="True" FontWeight="Medium" IsUndoEnabled="False" MaxLines="1" Padding="0,0,0,0" VerticalContentAlignment="Center" />
                            </StackPanel>
                            <StackPanel Grid.Column="6">
                                <Slider Value="{Binding WindForce7, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Orientation="Vertical" Height="200" HorizontalAlignment="Center" TickPlacement="TopLeft" SmallChange="0.5" Maximum="100" TickFrequency="2" LargeChange="5"/>
                                <TextBox Text="{Binding WindForceString7, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="10,10,10,0" TextAlignment="Center" IsReadOnly="True" FontWeight="Medium" IsUndoEnabled="False" MaxLines="1" Padding="0,0,0,0" VerticalContentAlignment="Center" />
                            </StackPanel>
                            <StackPanel Grid.Column="7">
                                <Slider Value="{Binding WindForce8, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Orientation="Vertical" Height="200" HorizontalAlignment="Center" TickPlacement="TopLeft" SmallChange="0.5" Maximum="100" TickFrequency="2" LargeChange="5"/>
                                <TextBox Text="{Binding WindForceString8, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="10,10,10,0" TextAlignment="Center" IsReadOnly="True" FontWeight="Medium" IsUndoEnabled="False" MaxLines="1" Padding="0,0,0,0" VerticalContentAlignment="Center" />
                            </StackPanel>
                        </Grid>
                    </GroupBox>
                    <GroupBox Header="Test">
                        <Grid Margin="0,0,0,3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <CheckBox x:Name="Test_1_CheckBox" HorizontalAlignment="Center" Click="Test_CheckBox_Click" Margin="0,0,-88,0" />
                            </StackPanel>
                            <StackPanel Grid.Column="1">
                                <CheckBox x:Name="Test_2_CheckBox" HorizontalAlignment="Center" Click="Test_CheckBox_Click" Margin="0,0,-88,0" />
                            </StackPanel>
                            <StackPanel Grid.Column="2">
                                <CheckBox x:Name="Test_3_CheckBox" HorizontalAlignment="Center" Click="Test_CheckBox_Click" Margin="0,0,-88,0" />
                            </StackPanel>
                            <StackPanel Grid.Column="3">
                                <CheckBox x:Name="Test_4_CheckBox" HorizontalAlignment="Center" Click="Test_CheckBox_Click" Margin="0,0,-88,0" />
                            </StackPanel>
                            <StackPanel Grid.Column="4">
                                <CheckBox x:Name="Test_5_CheckBox" HorizontalAlignment="Center" Click="Test_CheckBox_Click" Margin="0,0,-88,0" />
                            </StackPanel>
                            <StackPanel Grid.Column="5">
                                <CheckBox x:Name="Test_6_CheckBox" HorizontalAlignment="Center" Click="Test_CheckBox_Click" Margin="0,0,-88,0" />
                            </StackPanel>
                            <StackPanel Grid.Column="6">
                                <CheckBox x:Name="Test_7_CheckBox" HorizontalAlignment="Center" Click="Test_CheckBox_Click" Margin="0,0,-88,0" />
                            </StackPanel>
                            <StackPanel Grid.Column="7">
                                <CheckBox x:Name="Test_8_CheckBox" HorizontalAlignment="Center" Click="Test_CheckBox_Click" Margin="0,0,-88,0" />
                            </StackPanel>
                        </Grid>
                    </GroupBox>
                </StackPanel>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <Label Content="General Settings" VerticalAlignment="Center" />
                </TabItem.Header>
                <StackPanel Margin="10,10,10,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <CheckBox Grid.Column="0" Content="Enable Speech Synthesizer" IsChecked="{Binding EnableSpeechSynthesizer, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <Slider x:Name="SpeechSynthesizerVolume" Grid.Column="1"  Margin="20,0,0,0" ValueChanged="SpeechSynthesizerVolume_ValueChanged" SmallChange="1" LargeChange="10" Maximum="100" Minimum="1" TickFrequency="5" TickPlacement="Both" Value="{Binding SpeechSynthesizerVolume, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        <Label Grid.Column="2" Content="Volume" VerticalAlignment="Center"  Margin="10,0,0,0"/>
                    </Grid>
                </StackPanel>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <Label Content="Console" VerticalAlignment="Center" />
                </TabItem.Header>
                <StackPanel Margin="10,10,10,10">
                    <TextBox x:Name="ConsoleTextBox" Text="" IsReadOnly="True" FontWeight="Medium" TextWrapping="Wrap" IsUndoEnabled="False" Height="320" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
                </StackPanel>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <Label Content="Help" VerticalAlignment="Center" />
                </TabItem.Header>
                <StackPanel Margin="10,10,10,10">
                    <Button x:Name="SeeHelpDocumentation" HorizontalAlignment="Stretch" Content="See the Documentation" Click="SeeHelpDocumentation_Click" />
                    <Button x:Name="GoToIracingForumThread" HorizontalAlignment="Stretch" Content="Go to the iRacing Forum Thread" Click="GoToIRacingForumThread_Click" Margin="0,5,0,0" />
                    <Button x:Name="SendMarvinYourConsoleLog" HorizontalAlignment="Stretch" Content="Send Marvin Your Console Log" Click="SendMarvinYourConsoleLog_Click" Margin="0,5,0,0" />
                    <TextBlock TextWrapping="WrapWithOverflow" TextAlignment="Justify" Margin="0,5,0,0">You must have an iRacing Forums account to use the above button. When you click on the button, your console log will be copied to the Windows clipboard. A browser window will be opened, taking you to the iRacing Forum New Message page. Type in a short description of the problem in the message body, and then hit Ctrl+V to paste your console log into the message body.</TextBlock>
                </StackPanel>
            </TabItem>
        </TabControl>
        <StatusBar Padding="10,0,10,0">
            <StatusBar.ItemsPanel>
                <ItemsPanelTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="70" />
                            <ColumnDefinition Width="70" />
                        </Grid.ColumnDefinitions>
                    </Grid>
                </ItemsPanelTemplate>
            </StatusBar.ItemsPanel>
            <StatusBarItem Grid.Column="0" x:Name="ConnectionStatusBarItem" Content="iRacing Simulator is Not Running" Foreground="Gray"/>
            <Separator Grid.Column="1" />
            <StatusBarItem Grid.Column="2" x:Name="CurrentCarStatusBarItem" Content="No Car" Foreground="Gray"/>
            <Separator Grid.Column="3" />
            <StatusBarItem Grid.Column="4" x:Name="CurrentTrackStatusBarItem" Content="No Track" Foreground="Gray"/>
            <StatusBarItem Grid.Column="5" x:Name="ForceFeedbackStatusBarItem" Content="FFB" Foreground="Gray"/>
            <StatusBarItem Grid.Column="6" x:Name="WindStatusBarItem" Content="Wind" Foreground="Gray"/>
        </StatusBar>
    </StackPanel>
</Window>
